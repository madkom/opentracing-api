{
    "name": "madkom/opentracing-api",
    "description": "Client written in PHP for Zipkin",
    "type": "library",
    "prefer-stable": true,
    "license": "MIT",
    "homepage": "http://madkom.pl/",
    "keywords": [
        "opentracing", "php", "client", "zipkin", "api"
    ],
    "authors": [
        {
            "name": "Dariusz Gafka",
            "email": "d.gafka@madkom.pl"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "psr/http-message": "^1.0",
        "php-http/httplug": "^1.0.0",
        "guzzlehttp/psr7": "^1.2.2"
    },
    "require-dev": {
        "phpspec/phpspec": "^2.4.1",
        "phpunit/phpunit": "^5.2.4",
        "henrikbjorn/phpspec-code-coverage": "dev-master",
        "phpunit/php-code-coverage": "^3.0",
        "phpunit/phpcov": "^3.0.0",
        "satooshi/php-coveralls": "dev-master",
        "php-http/guzzle6-adapter": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Madkom\\": "src"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
